use("jimcostdev_api");

var collection = 'perfil';
var username = 'test'; 

// Utiliza el método update con $push para añadir elementos al array 'skills'
// $each Agrega múltiples valores al campo del Array.
db.getCollection(collection).updateOne(
   {
      username: username
   },
   {
      $push: {
         skills: {
            $each: ["postgresql"]
         }
      }
   }
);
